{% extends "resources/base.twig" %}

{% block links %}
    <link rel="stylesheet" type="text/css" href="/static/css/reset.css" xmlns="http://www.w3.org/1999/html"/>
    <link rel="stylesheet/less" type="text/css" href="/static/less/contract.less"/>
    <script type="text/javascript">
        less = {
            env: "development", // or "production"
            async: false,       // load imports async
            fileAsync: false   // load imports async when in a page under
        };
    </script>
    <script src="/static/js/less-1.3.3.min.js" type="text/javascript"></script>
{% endblock %}

{% block page %}
    <div id="contract_page">
        <div id="locate_and_date">{% trans "Fait en deux exemplaires a Montpellier le" %} : {{ InvoiceDate|date('d/m/Y') }}</div>
        <div id="blocs_signatures">
            <div id="bloc_signature_client">{% trans "Le client" %}</div>
            <div id="bloc_signature_societe">{% trans "La societe" %}</div>
        </div>
        <div id="code_contrat">{{ InvoiceDate|date('Ymd') }}</div>
        <div id="footer_contract">
            <div id="left_side">{% trans "Version 1.0 - 10 octobre 2014" %}</div>
            <div id="right_side">{% trans "Page 10 sur 10" %}</div>
        </div>
    </div>
{% endblock %}
