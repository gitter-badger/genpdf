{% extends "resources/order-receipt.twig" %}

{% block pefc %}
    {% if cert.name == 'PEFC™' %}
        <p>{% trans "Commande certifiee" %} {{ cert.name }}&nbsp;{{ cert.indication }}&nbsp;-&nbsp;{{ cert.number }}</p>
    {% endif %}
{% endblock %}

{% block stickersrollers %}
    {% if product.estStickersRollers %}
        <div id="stickersrollers">Votre code promo de remboursement : <span class="bold">STICKERROLLS</span> (applicable sur toute commande d'un produit de la gamme étiquettes en rouleau).</div>
    {% endif %}
{% endblock %}

{% block mentions %}
    <p>{{ ("Conditions generales"|trans)|replace({
        '%link1%': '<a href="commande@exaprint.fr">commande@exaprint.fr</a>',
        '%link2%': '<a href="http://www.exaprint.fr/page/conditions-generales-de-vente">http://www.exaprint.fr/page/conditions-generales-de-vente</a>'
    })|raw }}</p>
{% endblock %}